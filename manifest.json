{
  "manifest_version": 3,
  "name": "ChatGPT Prompt Recorder",
  "version": "1.0",
  "description": "Records ChatGPT prompts from user inputs",
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Recorded Prompts"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ]
}
